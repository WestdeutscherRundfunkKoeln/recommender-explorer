                "required": [
                  "auth_header",
                  "auth_header_value",
                  "param_modelType"
                ]
              },
              "user_type": {
                "type": "string"
              },
              "default": {
                "type": "boolean"
              }
            },
            "required": [
              "display_name",
              "handler",
              "endpoint",
              "start_color",
              "reco_color",
              "content_type",
              "properties",
              "user_type",
              "default"
            ]
          }
        },
        "clustering_models": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "display_name": {
                "type": "string"
              },
              "handler": {
                "type": "string",
                "pattern": "^[^@]*@[^@]*$"
              },
              "endpoint": {
                "type": "string",
                "format": "uri"
              },
              "role_arn": {
                "type": "string",
                "pattern": "^arn:aws:iam::[0-9]{12}:role/.*$"
              },
              "user_type": {
                "type": "string"
              },
              "field_mapping": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "default": {
                "type": "boolean"
              }
            },
            "required": [
              "display_name",
              "handler",
              "endpoint",
              "role_arn",
              "user_type",
              "field_mapping",
              "default"
            ]
          }
        }
      }
    },
    "ui_config": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^.*\\.yaml$"
        },
        {
          "type": "object"
        }
      ]
    }
  },
  "required": [
    "indexing_sources",
    "databackend",
    "opensearch",
    "c2c_config"
  ]
}
