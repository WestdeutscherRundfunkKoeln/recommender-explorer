                "type": "string"
              },
              "pa_service_rest_endpoint": {
                "type": "string"
              }
            },
            "required": [
              "display_name",
              "handler",
              "endpoint",
              "start_color",
              "reco_color",
              "content_type",
              "default"
            ]
          }
        }
      },
      "required": [
        "c2c_models"
      ]
    },
    "u2c_config": {
      "type": "object",
      "properties": {
        "u2c_models": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "properties": {
              "display_name": {
                "type": "string"
              },
              "handler": {
                "type": "string",
                "pattern": "^[^@]*@[^@]*$"
              },
              "endpoint": {
                "type": "string",
                "foarmat": "uri"
              },
              "start_color": {
                "type": "string",
                "pattern": "^#[0-9A-Fa-f]{6}$"
              },
              "reco_color": {
                "type": "string",
                "pattern": "^#[0-9A-Fa-f]{6}$"
              },
              "content_type": {
                "type": "string"
              },
              "properties": {
                "type": "object",
                "properties": {
                  "auth_header": {
                    "type": "string"
                  },
                  "auth_header_value": {
                    "type": "string"
                  },
                  "param_modelType": {
                    "type": "string"
                  }
