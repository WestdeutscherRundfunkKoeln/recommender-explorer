        "base_url_embedding"
      ]
    },
    "c2c_config": {
      "type": "object",
      "properties": {
        "c2c_models": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "properties": {
              "display_name": {
                "type": "string"
              },
              "handler": {
                "type": "string",
                "pattern": "^[^@]*@[^@]*$"
              },
              "endpoint": {
                "type": "string",
                "format": "uri"
              },
              "start_color": {
                "type": "string",
                "pattern": "^#[0-9A-Fa-f]{6}$"
              },
              "reco_color": {
                "type": "string",
                "pattern": "^#[0-9A-Fa-f]{6}$"
              },
              "content_type": {
                "type": "string"
              },
              "default": {
                "type": "boolean"
              },
              "properties": {
                "type": "object",
                "properties": {
                  "auth_header": {
                    "type": "string"
                  },
                  "auth_header_value": {
                    "type": "string"
                  }
